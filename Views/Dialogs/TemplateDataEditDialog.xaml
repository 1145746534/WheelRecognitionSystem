<UserControl x:Class="WheelRecognitionSystem.Views.Dialogs.TemplateDataEditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelRecognitionSystem.Views.Dialogs"
        mc:Ignorable="d"
        Height="340" Width="600">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Assets/Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Assets/Styles/TextBoxStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#88D1D5E8">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="590 "/>
        </Grid.ColumnDefinitions>
        <Grid Background="#FFDDE3FB">
            <TextBlock Text="模板数据修改" VerticalAlignment="Center" Margin="20,0" FontSize="22" FontWeight="Bold" Foreground="#444"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="0.8*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Row="0"  Text="序号：" VerticalAlignment="Center" FontSize="18" HorizontalAlignment="Right"/>
            <TextBox  Grid.Row="0"  Grid.Column="1" x:Name="Index_tbx" Style="{StaticResource NewTextBoxStyle}"  HorizontalContentAlignment="Center"
             Text="{Binding MessageTemplatedata.Index, Mode=TwoWay}" Width="120" FontSize="18" HorizontalAlignment="Left" Margin="0,2" IsReadOnly="True"/>
            <TextBlock Grid.Row="1" Text="轮毂型号：" VerticalAlignment="Center" FontSize="18" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="WheelType_tbx" Style="{StaticResource NewTextBoxStyle}"  HorizontalContentAlignment="Center"
             Text="{Binding MessageTemplatedata.WheelType, Mode=TwoWay}" Width="120" FontSize="18" HorizontalAlignment="Left" Margin="0,2" IsReadOnly="True"/>
            <TextBlock  Grid.Row="1" Grid.Column="2" Text="轮毂样式：" VerticalAlignment="Center" FontSize="18" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="1" Grid.Column="3" x:Name="SpokeQuantity_tbx" PreviewTextInput="SpokeQuantity_tbx_PreviewTextInput" Style="{StaticResource NewTextBoxStyle}" HorizontalContentAlignment="Center"
             Text="{Binding MessageTemplatedata.WheelStyle, Mode=TwoWay}" Width="120" FontSize="18" HorizontalAlignment="Left" Margin="0,2"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="内圈灰度均值：" VerticalAlignment="Center" FontSize="18" HorizontalAlignment="Right"/>
            <TextBox Grid.Row="0" Grid.Column="3" x:Name="DarkMaxThreshold_tbx" PreviewTextInput="DarkMaxThreshold_tbx_PreviewTextInput" Style="{StaticResource NewTextBoxStyle}" HorizontalContentAlignment="Center"
             Text="{Binding MessageTemplatedata.InnerCircleGary, Mode=TwoWay}" Width="120" FontSize="18" HorizontalAlignment="Left" Margin="0,2"/>
        </Grid>
        <Grid  Grid.Row="2" Background="#FFDDE3FB">
            <Button Style="{StaticResource NormalButtonStyle}" Content="确  认" Command="{Binding ConfirmCommand}" Width="90" Height="40" FontSize="22" Margin="115,0" HorizontalAlignment="Right"/>
            <Button Style="{StaticResource NormalButtonStyle}" Content="取  消" Command="{Binding CancelCommand}" Width="90" Height="40" FontSize="22" Margin="15,0" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</UserControl>
