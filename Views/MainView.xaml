<Window x:Class="WheelRecognitionSystem.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WheelRecognitionSystem.Views"
        xmlns:p="http://prismlibrary.com/"
        xmlns:c="clr-namespace:WheelRecognitionSystem.Public.Converter"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" FontFamily="Microsoft YaHei" FontSize="13" Foreground="#333" FontWeight="ExtraLight"
        Title="轮毂识别系统" Icon="{StaticResource icon}" Height="1000" Width="1580" MinHeight="600" MinWidth="800">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="-1"/>
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <c:BackgroundConverter x:Key="BackgroundConverter"/>
        <BooleanToVisibilityConverter x:Key="btv"/>
    </Window.Resources>
    <Border BorderThickness ="{Binding WindowThickness, RelativeSource={RelativeSource AncestorType=Window}}" Background="Transparent">
        <Grid x:Name="mainView">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#c2e0fa" Offset="0"/>
                        <GradientStop Color="#FFFBF6F6" Offset="0.6"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="Transparent" Offset="0.6"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="0,0,0,1" CornerRadius="0,0,60,0" Height="39" Width="320" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#c2e0fa" Offset="0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                                <GradientStop Color="#16a1ff" Offset="0"/>
                                <GradientStop Color="#16a1ff" Offset="0.3"/>
                                <GradientStop Color="#16a1ff" Offset="0.8"/>
                                <GradientStop Color="#16a1ff" Offset="0.9"/>
                                <GradientStop Color="#FFAA9797" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Assets/Images/Logo.png" VerticalAlignment="Top" Margin="5">
                                <Image.Effect>
                                    <DropShadowEffect Color="Gray" ShadowDepth="-1" BlurRadius="5" Direction="0" Opacity="0.8"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock Text="装备中心 | 终检系统 v1.0"  Grid.Column="1" VerticalAlignment="Center" FontSize="16" SnapsToDevicePixels="True">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#16a1ff" Offset="0"/>
                                        <GradientStop Color="#FF7C3BAC" Offset="0.75"/>
                                        <GradientStop Color="#FF22577A" Offset="1"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Gray" ShadowDepth="0" BlurRadius="1" Direction="0" Opacity="0.7"/>
                                </TextBlock.Effect>
                                <TextBlock.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2"/>
                                </TextBlock.LayoutTransform>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right"
                    Background="Transparent" WindowChrome.IsHitTestVisibleInChrome="True">
                        <Button Content="&#xe637;" Style="{StaticResource WindowControlButtonStyle}" FontFamily="{StaticResource Iconfont}"
                    Height="35" Width="40" Foreground="#555" Click="WindowMin_Click"/>
                        <Button Content="{Binding ButtonIconCode, RelativeSource={RelativeSource AncestorType=Window}}"
                            Style="{StaticResource WindowControlButtonStyle}" FontFamily="{StaticResource Iconfont}"
                    Height="35" Width="40" Foreground="#555" Click="WindowMax_Click"/>
                        <Button Content="&#xe62b;" Style="{StaticResource CloseButtonStyle}" FontFamily="{StaticResource Iconfont}"
                    Height="35" Width="40" Foreground="#555" Click="WindowClose_Click" />
                    </StackPanel>
                </Grid>
            </Border>
            <TabControl Grid.Row="1" p:RegionManager.RegionName="ViewRegion" FontSize="18" FontWeight="Bold" Margin="1">
                <TabControl.Resources>
                    <Style TargetType="TabPanel">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </TabControl.Resources>
                <TabControl.ItemContainerStyle>
                    <Style TargetType="TabItem">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Background" Value="#E5E5E5"/>
                        <Setter Property="BorderBrush" Value="#ACACAC"/>
                        <Setter Property="Margin" Value="0"/>
                        <Setter Property="Padding" Value="6,2,6,2"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                        <Setter Property="Header" Value="{Binding DataContext.Title}"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type TabItem}">
                                    <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                                        <Border x:Name="mainBorder" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="1,1,1,0" Margin="0" CornerRadius="5,5,0,0">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="White" Offset="0"/>
                                                    <GradientStop Color="#FFF2E7E7" Offset="0.5"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <Border x:Name="innerBorder" 
                            BorderBrush="#ACACAC"
                            BorderThickness="1,1,1,0" Margin="-1" Opacity="0" CornerRadius="5,5,0,0">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="White" Offset="0"/>
                                                        <GradientStop Color="#FFCBE2EF" Offset="0.5"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                            </Border>
                                        </Border>
                                        <ContentPresenter x:Name="contentPresenter" ContentSource="Header" 
                            Focusable="False" HorizontalAlignment="{Binding HorizontalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}" 
                                  Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" 
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                  VerticalAlignment="{Binding VerticalContentAlignment, RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Left"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#DCECFC"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#7EB4EA"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,0,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,0,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Bottom"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#DCECFC"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#7EB4EA"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,0,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,0,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Right"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#DCECFC"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#7EB4EA"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="0,1,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="0,1,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Top"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#DCECFC"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#7EB4EA"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,1,0"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,1,0"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Left"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Opacity" TargetName="contentPresenter" Value="0.56"/>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#F0F0F0"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#D9D9D9"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,0,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,0,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Bottom"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Opacity" TargetName="contentPresenter" Value="0.56"/>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#F0F0F0"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#D9D9D9"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,0,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,0,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Right"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Opacity" TargetName="contentPresenter" Value="0.56"/>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#F0F0F0"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#D9D9D9"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="0,1,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="0,1,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsEnabled, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Top"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Opacity" TargetName="contentPresenter" Value="0.56"/>
                                            <Setter Property="Background" TargetName="mainBorder" Value="#F0F0F0"/>
                                            <Setter Property="BorderBrush" TargetName="mainBorder" Value="#D9D9D9"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,1,0"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,1,0"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Left"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,0,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,0,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Left"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Panel.ZIndex" Value="1"/>
                                            <Setter Property="Margin" Value="-2,-2,0,-2"/>
                                            <Setter Property="Opacity" TargetName="innerBorder" Value="1"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,0,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,0,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Bottom"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,0,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,0,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Bottom"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Panel.ZIndex" Value="1"/>
                                            <Setter Property="Margin" Value="-2,0,-2,-2"/>
                                            <Setter Property="Opacity" TargetName="innerBorder" Value="1"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,0,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,0,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Right"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="0,1,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="0,1,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Right"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Panel.ZIndex" Value="1"/>
                                            <Setter Property="Margin" Value="0,-2,-2,-2"/>
                                            <Setter Property="Opacity" TargetName="innerBorder" Value="1"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="0,1,1,1"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="0,1,1,1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="false"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Top"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,1,0"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,1,0"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Mode=Self}}" Value="true"/>
                                                <Condition Binding="{Binding TabStripPlacement, RelativeSource={RelativeSource AncestorType={x:Type TabControl}}}" Value="Top"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Panel.ZIndex" Value="1"/>
                                            <Setter Property="Margin" Value="-2,-2,-2,0"/>
                                            <Setter Property="Opacity" TargetName="innerBorder" Value="1"/>
                                            <Setter Property="BorderThickness" TargetName="innerBorder" Value="1,1,1,0"/>
                                            <Setter Property="BorderThickness" TargetName="mainBorder" Value="1,1,1,0"/>
                                        </MultiDataTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.ItemContainerStyle>
            </TabControl>
            <!--<GridSplitter Grid.Row="1" VerticalAlignment="Bottom" Height="2" Width="{Binding ElementName=mainView, Path=ActualWidth}" ResizeDirection="Rows" Background="Transparent" Cursor="SizeNS"/>-->
            <Border Grid.Row="2" Background="#FFE5ECF3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0" Margin="0,5">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="0.8*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="状态" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="识别轮型" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="相似度" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="3" Text="用时" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Row="0" Grid.Column="4" Text="颜色" FontSize="20" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <Label Grid.Row="1" Grid.Column="0" Content="{Binding RecognitionStatus}" FontSize="14" Style="{StaticResource NormalLabelStyle}" Margin="2">
                            <Label.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFA6B4EA" Offset="0.0"/>
                                    <GradientStop Color="Transparent" Offset="1.2"/>
                                </LinearGradientBrush>
                            </Label.Background>
                        </Label>
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RecognitionWheelType}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" FontWeight="Bold" IsReadOnly="True"  FontSize="18"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding Similarity}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding TimeConsumed}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="1" Grid.Column="4" Text="{}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <Label Grid.Row="2" Grid.Column="0" Content="{Binding RecognitionStatus}" FontSize="14" Style="{StaticResource NormalLabelStyle}" Margin="2">
                            <Label.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFA6B4EA" Offset="0.0"/>
                                    <GradientStop Color="Transparent" Offset="1.2"/>
                                </LinearGradientBrush>
                            </Label.Background>
                        </Label>
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RecognitionWheelType}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" FontWeight="Bold" IsReadOnly="True"  FontSize="18"/>
                        <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding Similarity}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding TimeConsumed}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="2" Grid.Column="4" Text="{}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <Label Grid.Row="3" Grid.Column="0" Content="{Binding RecognitionStatus}" FontSize="14" Style="{StaticResource NormalLabelStyle}" Margin="2">
                            <Label.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFA6B4EA" Offset="0.0"/>
                                    <GradientStop Color="Transparent" Offset="1.2"/>
                                </LinearGradientBrush>
                            </Label.Background>
                        </Label>
                        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding RecognitionWheelType}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" FontWeight="Bold" IsReadOnly="True"  FontSize="18"/>
                        <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding Similarity}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding TimeConsumed}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="3" Grid.Column="4" Text="{}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <Label Grid.Row="4" Grid.Column="0" Content="{Binding RecognitionStatus}" FontSize="14" Style="{StaticResource NormalLabelStyle}" Margin="2">
                            <Label.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFA6B4EA" Offset="0.0"/>
                                    <GradientStop Color="Transparent" Offset="1.2"/>
                                </LinearGradientBrush>
                            </Label.Background>
                        </Label>
                        <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding RecognitionWheelType}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" FontWeight="Bold" IsReadOnly="True"  FontSize="18"/>
                        <TextBox Grid.Row="4" Grid.Column="2" Text="{Binding Similarity}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding TimeConsumed}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="4" Grid.Column="4" Text="{}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <Label Grid.Row="5" Grid.Column="0" Content="{Binding RecognitionStatus}" FontSize="14" Style="{StaticResource NormalLabelStyle}" Margin="2">
                            <Label.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFA6B4EA" Offset="0.0"/>
                                    <GradientStop Color="Transparent" Offset="1.2"/>
                                </LinearGradientBrush>
                            </Label.Background>
                        </Label>
                        <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding RecognitionWheelType}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" FontWeight="Bold" IsReadOnly="True"  FontSize="18"/>
                        <TextBox Grid.Row="5" Grid.Column="2" Text="{Binding Similarity}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="5" Grid.Column="3" Text="{Binding TimeConsumed}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>
                        <TextBox Grid.Row="5" Grid.Column="4" Text="{}" Style="{StaticResource NewTextBoxStyle}" Margin="0,2,0,2" IsReadOnly="True" FontSize="18"/>


                    </Grid>
                    <Grid Grid.Column="1" Margin="10,5,6,5" Height="140">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="PLC连接状态" FontSize="14" Style="{StaticResource NormalLabelStyle}" Margin="2" Background="{Binding PlcStatus, Converter={StaticResource BackgroundConverter}}" Width="120"/>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button Style="{StaticResource NormalButtonStyle}" Content="{Binding SystemModelContent}" Foreground="{Binding SystemModeButtonForeground}"
                                Command="{Binding SystemModeSwitchCommand}" Margin="10" FontSize="30" FontWeight="DemiBold"/>
                            <Button Grid.Column="1" Style="{StaticResource NormalButtonStyle}" Content="手动识别" Foreground="#FF363644"
                                Command="{Binding ManualRecognitionCommand}" IsEnabled="{Binding ManualRecognitionEnabled}" Margin="10" FontSize="30" FontWeight="DemiBold"/>
                        </Grid>
                    </Grid>
                    <GroupBox Grid.Column="3" Style="{StaticResource NewGroupBoxStyle}" Header="信息显示" Margin="5">
                        <TextBox Style="{StaticResource NewTextBoxStyle}" Name="SystemMessage" Margin="5,28,5,5" IsReadOnly="True" FontSize="14" VerticalContentAlignment="Top"
                             VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" HorizontalContentAlignment="Left"/>
                    </GroupBox>
                    <Border Grid.Column="2" Height="20"  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,30,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="40" Height="16" CornerRadius="3" Background="{Binding RecognitionSignBackground, Converter={StaticResource BackgroundConverter}}" Margin="0,0,1,0">
                                <TextBlock Text="识别标志" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Border Width="40" Height="16" CornerRadius="3" Background="{Binding AgainRecognitionBackground, Converter={StaticResource BackgroundConverter}}" Margin="0,0,1,0">
                                <TextBlock Text="再次识别" FontSize="9" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <Border Width="420" Grid.RowSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" CornerRadius="5" 
                Visibility="{Binding MessageBorderVisibility, Converter={StaticResource btv}}" Background="{Binding MessageBackground}">
                <TextBlock Text="{Binding SystemMessages}" Margin="5" FontSize="22" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap"/>
            </Border>
        </Grid>
    </Border>
</Window>
