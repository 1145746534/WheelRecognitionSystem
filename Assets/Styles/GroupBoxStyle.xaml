<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="GroupBox" x:Key="NewGroupBoxStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Border Background="#55FFFFFF" CornerRadius="6" BorderBrush="#080fc6f8" BorderThickness="1"/>
                        <!--显示Content内容-->
                        <ContentPresenter/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="8">
                            <Border Background="#FF12EB25" Width="3" Height="10" CornerRadius="2" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Header,RelativeSource={RelativeSource Mode=TemplatedParent}}" Margin="5,0"
                                                   FontSize="11" FontWeight="Normal" Foreground="#333"/>
                            <Border Background="#AA44F358" Width="3" Height="8" CornerRadius="2" VerticalAlignment="Center"/>
                            <Border Background="#7783ED5F" Width="3" Height="8" CornerRadius="2" Margin="3,0" VerticalAlignment="Center"/>
                            <Border Background="#4475EB6F" Width="3" Height="8" CornerRadius="2" VerticalAlignment="Center"/>
                            <Border Background="#11BFE5B3" Width="3" Height="8" CornerRadius="2" Margin="3,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Path Data="M0,10 0,6A6 6 0 0 1 6 0L 10 0" Stroke="#b4fee7" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="1"/>
                        <Path Data="M0,10 4,10A6 6 0 0 0 10 4L 10 0" Stroke="#b4fee7" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>